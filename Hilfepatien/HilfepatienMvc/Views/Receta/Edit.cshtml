                <div class="editor-label">
                    @Html.LabelFor(model => model.Nombre_Medicamento)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Nombre_Medicamento)
                    @Html.ValidationMessageFor(model => model.Nombre_Medicamento)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Nombre_Paciente)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Nombre_Paciente)
                    @Html.ValidationMessageFor(model => model.Nombre_Paciente)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Fecha)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Fecha)
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>

                <p>
                    <input type="submit" value="Save" />
                </p>
