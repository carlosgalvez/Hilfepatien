
@model IEnumerable<HilfepatienMvc.Models.Empleados>
<!DOCTYPE html>
<html>

<head>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/LOGOTIPO.png" />
    <title>Empleados</title>
</head>
<body background="~/images/fondo1.jpg">
    <div>
        <center><h2>Lista de empleados</h2></center>
        <div align="right">  @Html.ActionLink("Ingresar un nuevo empleado", "Create")</div>
        <table class="table">
            <tr>
                <th>
                    <label>Nombre completo</label>
                </th>
                <td>&nbsp;&nbsp;</td>
                <th>
                    <label>Puesto</label>
                </th>
                <td>&nbsp;&nbsp;</td>
                <th>
                    <label>Fecha de ingreso</label>
                </th>
                <td>&nbsp;&nbsp;</td>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>&nbsp;&nbsp;</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>&nbsp;&nbsp;</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                    </td>
                    <td>&nbsp;&nbsp;</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</body>

</html>