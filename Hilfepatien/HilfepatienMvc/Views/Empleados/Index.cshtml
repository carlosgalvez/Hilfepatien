@model IEnumerable<HilfepatienMvc.Models.Empleados>

<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/LOGOTIPO.png" />
    <title>Empleados</title>
</head>
<body >
<h2>Index</h2>
    <p>
        @Html.ActionLink("Ingresar nuevo empleado", "Create")
    </p>
    <div id="tabladatos" >
    <table>
        <tr>
            <th>
               <label>Nombre completo</label>
            </th>
            <td>&nbsp;&nbsp;</td>
            <th>
                <label>Puesto</label>
            </th>
            <td>&nbsp;&nbsp;</td>
            <th>
               <label>Fecha de ingreso</label>
            </th>
            <td>&nbsp;&nbsp;</td>
            <th>
               <label>Sueldo</label>
            </th>
            <th>&nbsp;&nbsp;</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>&nbsp;&nbsp;</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puesto)
                </td>
                <td>&nbsp;&nbsp;</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                </td>
                <td>&nbsp;&nbsp;</td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Sueldo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>
</body>